{
  "name": "the-soothsayer",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-grade AI workspace platform",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@soothsayer/web",
    "dev:api": "turbo run dev --filter=@soothsayer/api",
    "dev:worker": "turbo run dev --filter=@soothsayer/worker",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@soothsayer/web",
    "build:api": "turbo run build --filter=@soothsayer/api",
    "build:worker": "turbo run build --filter=@soothsayer/worker",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:generate": "pnpm --filter @soothsayer/api prisma:generate",
    "db:migrate": "pnpm --filter @soothsayer/api prisma:migrate",
    "db:push": "pnpm --filter @soothsayer/api prisma:push",
    "db:seed": "pnpm --filter @soothsayer/api prisma:seed",
    "db:studio": "pnpm --filter @soothsayer/api prisma:studio",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "ioredis": "^5.9.2"
  }
}
