# Soothsayer EC2 production template for public IP 100.48.60.255
# Copy to /home/ec2-user/soothsayer/.env and update secrets/keys before deploy.

NODE_ENV=production
APP_NAME=the-soothsayer
APP_URL=http://100.48.60.255
CORS_ORIGINS=http://100.48.60.255
API_URL=http://100.48.60.255/api
API_PORT=3000
WEB_PORT=4173

# Required
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/soothsayer?schema=public
JWT_SECRET=replace-with-at-least-32-characters

# Recommended
WS_REDIS_ENABLED=false
WS_REDIS_FORCE_IN_DEV=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
AUTH_BYPASS=false
AUTH_BYPASS_EMAIL=admin@soothsayer.local
AUTH_BYPASS_NAME=Admin User
ADMIN_SEED_EMAIL=admin@soothsayer.local
ADMIN_SEED_PASSWORD=password123
ADMIN_SEED_NAME=Admin User
ADMIN_SEED_ORGANIZATION=Soothsayer Admin Org

LOG_LEVEL=info
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Optional AI providers
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_API_KEY=
OLLAMA_BASE_URL=http://127.0.0.1:11434
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
ANTHROPIC_API_KEY=

# Optional storage/session
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
SESSION_SECRET=replace-with-at-least-32-characters
