# ================================
# The Soothsayer - Environment Configuration
# ================================

# Application
NODE_ENV=development
APP_NAME=the-soothsayer
APP_URL=http://localhost:5173
# Comma-separated allowed origins for API CORS (used for EC2/public deploys)
CORS_ORIGINS=http://localhost:5173
API_URL=http://localhost:3000
API_PORT=3000
WEB_PORT=5173

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/soothsayer?schema=public

# Redis
# On EC2 with ElastiCache, set REDIS_HOST to your cache endpoint and REDIS_TLS=true.
# On local laptop with SSH tunnel, set REDIS_HOST=localhost and REDIS_TLS=true.
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
WS_REDIS_ENABLED=false
WS_REDIS_FORCE_IN_DEV=false

# JWT Authentication
JWT_SECRET=replace-with-at-least-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
AUTH_BYPASS=false
AUTH_BYPASS_EMAIL=admin@soothsayer.local
AUTH_BYPASS_NAME=Admin User
# Keep AUTH_BYPASS=false for normal testing. Prefer seeded admin credentials below.
ADMIN_SEED_EMAIL=admin@soothsayer.local
ADMIN_SEED_PASSWORD=password123
ADMIN_SEED_NAME=Admin User
ADMIN_SEED_ORGANIZATION=Soothsayer Admin Org

# Session
SESSION_SECRET=replace-with-at-least-32-chars

# AI Providers
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_API_KEY=
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_KEEP_ALIVE=30m
OLLAMA_NUM_PREDICT=192
OLLAMA_NUM_CTX=1024
AI_REQUEST_TIMEOUT_MS=600000
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
ANTHROPIC_API_KEY=

# File Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# Logging and Rate Limiting
LOG_LEVEL=info
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
VITE_API_TIMEOUT_MS=300000
VITE_CHAT_TIMEOUT_MS=600000
